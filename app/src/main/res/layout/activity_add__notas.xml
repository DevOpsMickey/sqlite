<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Notas_Activity">

  <EditText
      android:id="@+id/tvTituloNota"
      android:layout_width="209dp"
      android:layout_height="57dp"
      android:layout_marginStart="37dp"
      android:layout_marginTop="50dp"
      android:ems="10"
      android:fontFamily="sans-serif-black"
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
      android:id="@+id/imgBtnGuardar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="30dp"
      android:backgroundTint="#00FFFFFF"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.941"
      app:layout_constraintStart_toEndOf="@+id/tvTituloNota"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/listo" />

  <EditText
      android:id="@+id/tvContenidoNota"
      android:layout_width="319dp"
      android:layout_height="485dp"
      android:layout_marginStart="25dp"
      android:layout_marginTop="25dp"
      android:layout_marginEnd="25dp"
      android:layout_marginBottom="25dp"
      android:background="#FFB2B2"
      android:backgroundTint="#FFFFFF"
      android:elevation="40dp"
      android:ems="10"
      android:fontFamily="sans-serif-condensed"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:padding="20dp"
      android:textColor="#000000"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTituloNota"
      app:layout_constraintVertical_bias="0.012" />

</androidx.constraintlayout.widget.ConstraintLayout>